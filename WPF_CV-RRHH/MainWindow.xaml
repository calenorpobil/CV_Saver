<Window x:Class="WPF_CV_RRHH.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_CV_RRHH"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!--Titulo-->
            <RowDefinition Height="Auto"/> <!--Formularios-->
            <RowDefinition Height="*"/>     <!--DataGrid-->
        </Grid.RowDefinitions>


        <!-- Contenedor de campos de entrada -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,0">

            <!-- Título grande -->
            <Label Grid.Row="0" 
                   Content="Formulario de Datos" 
                   FontSize="24" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,8"/>
        </StackPanel>

        <!-- Contenedor horizontal para los campos -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left"
                    Margin="0,0,0,20">

            <!-- Campo 1 -->
            <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                <Label Content="Base de Datos:" RenderTransformOrigin="0.5,0.5">
                    <Label.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="0"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Label.RenderTransform>
                </Label>
                <TextBox x:Name="txBaseDeDatos" 
                         KeyDown="TextBox_KeyDown"
                         Text="{Binding BaseDeDatos, UpdateSourceTrigger=PropertyChanged}" 
                         Width="200"
                         Height="25"
                         Padding="2"/>
            </StackPanel>

            <!-- Campo 2 -->
            <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                <Label Content="Tabla:"/>
                <TextBox x:Name="txTabla" 
                         KeyDown="TextBox_KeyDown"
                         Text="{Binding Tabla, UpdateSourceTrigger=PropertyChanged}" 
                         Width="200"
                         Height="25"
                         Padding="2"/>
            </StackPanel>

            <!-- Campo 3 -->
            <StackPanel Orientation="Vertical">
                <Label Content="Otro:" />
                <TextBox x:Name="txOtro" 
                         KeyDown="TextBox_KeyDown"
                         Text="{Binding Otro, UpdateSourceTrigger=PropertyChanged}" 
                         Width="200"
                         Height="25"
                         Padding="2"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,20">

            <DataGrid x:Name="dataGrid" AutoGenerateColumns="True"/>
        </StackPanel>

    </Grid>
</Window>
