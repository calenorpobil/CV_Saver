<Window x:Class="WPF_CV_RRHH.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_CV_RRHH"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="700" Loaded="Window_Loaded"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!--Titulo-->
            <RowDefinition Height="Auto"/> <!--Formularios-->
            <RowDefinition Height="Auto"/>     <!--DataGrid-->
            <RowDefinition Height="Auto"/> <!--Datos-->
        </Grid.RowDefinitions>


        <!-- Contenedor de campos de entrada -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,0">

            <!-- Título grande -->
            <Label Grid.Row="0" 
                   Content="VENTANA DE ENTREVISTAS" 
                   FontSize="24" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,8"/>
        </StackPanel>

        <!-- Contenedor horizontal para los campos -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left"
                    Margin="0,0,0,20"
                    Width="Auto">

            <!-- Campo 1 -->
            <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                <Label Content="Nombre del entrevistado:" RenderTransformOrigin="0.5,0.5">
                    <Label.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="0"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Label.RenderTransform>
                </Label>
                <TextBox x:Name="txEntrevistado" 
                         KeyDown="TextBox_KeyDown"
                         Text="{Binding NombreEntrevistado, UpdateSourceTrigger=PropertyChanged}" 
                         Width="200"
                         Height="25"
                         Padding="2"/>
            </StackPanel>

            <!-- Campo 2 -->
            <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                <Label Content="DNI:"/>
                <TextBox x:Name="txDni" 
                         KeyDown="TextBox_KeyDown"
                         Text="{Binding Dni, UpdateSourceTrigger=PropertyChanged}" 
                         Width="200"
                         Height="25"
                         Padding="2"/>
            </StackPanel>

            <!-- Campo 3 -->
            <StackPanel Orientation="Vertical">
                <Label Content="Equipo:" />
                <TextBox x:Name="txOtro" 
                         KeyDown="TextBox_KeyDown"
                         Text="{Binding Otro, UpdateSourceTrigger=PropertyChanged}" 
                         Width="200"
                         Height="25"
                         Padding="2"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,20">
            <Grid Margin="0" Width="Auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical" Grid.Column="0" Height="Auto">
                    <DataGrid x:Name="dataGrid" AutoGenerateColumns="True" MouseDown="Row_DoubleClick">
                    </DataGrid>
                </StackPanel>
                <StackPanel Orientation="Vertical" Grid.Column="1" Height="Auto" VerticalAlignment="Center">
                    <Button Padding="2" Margin="8">➕ Registrar</Button>
                    <Button Padding="2" Margin="8">🗑 Borrar</Button>
                </StackPanel>
                
            </Grid>

        </StackPanel>
        <StackPanel Grid.Row="3" 
            Orientation="Horizontal" 
            HorizontalAlignment="Left"
            Margin="0,0,0,20">

            <!-- Campo 1 -->
            <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                <Label Content="Dirección: " RenderTransformOrigin="0.5,0.5"/>
                <TextBox x:Name="txDireccion" 
                 KeyDown="TextBox_KeyDown"
                 Text="{Binding Direccion, UpdateSourceTrigger=PropertyChanged}" 
                 Width="200"
                 Height="25"
                 Padding="2"/>
            </StackPanel>

            <!-- Campo 2 -->
            <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                <Label Content="Años:"/>
                <TextBox x:Name="txAños" 
                 KeyDown="TextBox_KeyDown"
                 Text="{Binding Años, UpdateSourceTrigger=PropertyChanged}" 
                 Width="200"
                 Height="25"
                 Padding="2"/>
            </StackPanel>

            <!-- Campo 3 -->
            <StackPanel Orientation="Vertical">
                <Label Content="Experiencia:" />
                <TextBox x:Name="txCurriculum" 
                 KeyDown="TextBox_KeyDown"
                 Text="{Binding Experiencia, UpdateSourceTrigger=PropertyChanged}" 
                 Width="200"
                 Height="25"
                 Padding="2"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
